<% content_for :content do %>
  <div class="row">
    <div class="span9">
      <h1><%= link_to @offering.course.title, offering_path(@offering) %></h1>
    </div>
    <div class="span3" style="text-align: right;">
      <h1><%= @offering.term %></h1>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <ul class="nav nav-tabs">
        <li class="<%= active_if(@nav_offering, :summary) %>">
          <%= link_to 'Summary', @offering %>
        </li>
        <% [:details, :objectives, :content, :assessment].each do |stage| %>
          <%= stage_navbar_link stage %>
        <% end %>
      </ul>
    </div>
  </div>

  <%= content_for?(:offering_content) ? yield(:offering_content) : yield %>
<% end %>

<%= render template: 'layouts/application' %>
