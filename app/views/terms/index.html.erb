<h1>Listing terms</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.title %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to_if term.offering_ids.empty?, 'Destroy', term, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

