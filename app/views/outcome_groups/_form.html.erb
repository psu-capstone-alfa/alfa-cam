<%= form_for @outcome_group,
  builder: FancyFormBuilder,
  html: {class: 'form-horizontal'} do |f| %>

  <legend>
    <% if @outcome_group.new_record? %>
      New Outcome Group
    <% else %>
      Editing <%= @outcome_group %>
    <% end %>
  </legend>

  <% if @outcome_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outcome_group.errors.count, "error") %> prohibited this outcome group from being saved:</h2>
    </div>
  <% end %>

  <%= f.control_group :title, label: 'Group Title' do %>
    <%= f.text_field :title, class: 'span2' %>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', [OutcomeGroup], class: 'btn' %>
  </div>
<% end %>
