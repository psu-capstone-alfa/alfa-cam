<h1><%= @offering %></h1>
<hr>

<%= bs_form_for(@offering, html: {class: 'offering-content-groups'}) do |f| %>
  <%= f.hidden_field :objectives_done, value: true %>
  <% if @offering.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@offering.errors.count, "error") %> prohibited this offering from being saved:</h2>

    <ul>
      <% @offering.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <table id='objectives_container' class="table-bordered table-condensed objective mappings">
    <thead>
      <tr>
        <th></th>
        <% @outcomes.each do |outcome| %>
        <th class="outcome"><abbr title="<%= outcome.title %>"><%= outcome.key %></abbr></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'objective',
        collection: @objectives,
        locals: {f: f} %>
      <%= render partial: 'objective',
            object: @new_objective,
            locals: {f: f, fields_for_args: {child_index: 'new'}} %>
      <tr id="content-footer">
        <td colspan="4">
          <a id="add-mapping" class="btn btn-success"><i class="icon-white icon-plus"></i> Add Objective</a>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="reset" class="btn">Cancel</button>
  </div>
<% end %>

