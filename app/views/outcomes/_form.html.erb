<% record = @outcome.new_record? ? [@outcome_group, @outcome] : @outcome %>
<%= form_for record,
  builder: FancyFormBuilder,
  html: {class: 'form-horizontal'} do |f| %>


  <legend>
    <%= @outcome_group %>
    :
    <% if @outcome.new_record? %>
      New Outcome
    <% else %>
      <%= @outcome.key %>
    <% end %>
  </legend>

  <% if @outcome.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outcome.errors.count, "error") %> prohibited this outcome from being saved:</h2>
    </div>
  <% end %>

  <%= f.control_group :key, label: 'Outcome Key' do %>
    <%= f.text_field :key, class: 'span2' %>
  <% end %>
  <%= f.control_group :description, label: 'Description' do %>
    <%= f.text_area :description, class: 'span6' %>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', [@outcome_group, Outcome], class: 'btn' %>
  </div>
<% end %>
