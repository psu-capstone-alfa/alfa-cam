<h1>Listing outcomes</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @outcomes.each do |outcome| %>
  <tr>
    <td><%= outcome.key %></td>
    <td><%= outcome.title %></td>
    <td><%= outcome.description %></td>
    <td><%= link_to 'Show', outcome %></td>
    <td><%= link_to_if can?(:edit, outcome), 'Edit', edit_outcome_path(outcome) %></td>
    <td><%= link_to_if can?(:destroy, outcome), 'Destroy', outcome, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

