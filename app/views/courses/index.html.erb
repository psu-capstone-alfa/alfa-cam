<h1>Listing courses</h1>

<table>
  <tr>
    <th>Dept code</th>
    <th>Course num</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.dept_code %></td>
    <td><%= course.course_num %></td>
    <td><%= course.title %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to_unless course.offerings.present?, 'Edit', edit_course_path(course) %></td>
    <td><%= link_to_unless course.offerings.present?, 'Destroy', course, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

