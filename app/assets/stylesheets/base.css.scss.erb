body {
  padding-top: 50px;
}

h1 > a {
  color: black;

  &:hover {
    color: black;
    text-decoration: none;
  }
}

.float-right {
  float: right;
}

.align-right {
  text-align: right;
}


[class^="icon-"] {
  background-image: url(<%= asset_data_uri 'twitter/bootstrap/glyphicons-halflings.png' %>)
}

.icon-white {
  background-image: url(<%= asset_data_uri 'twitter/bootstrap/glyphicons-halflings-white.png' %>)
}

.btn-tiny {
  padding: 2px 6px 2px;
  line-height: 15px;
}

table tbody.no-first-border {
  tr:first-child td {
    border-top: 0;
  }
}

table .actions {
  text-align: right;
}

.control-group.error {
  padding: .5em 0;
  background-color: #fee;
  -moz-border-radius: .5em;
  -webkit-border-radius: .5em;
  -o-border-radius: .5em;
  -ms-border-radius: .5em;
  border-radius: .5em;
}

select.date-select {
  width: 12em;
}

form.login-form {
  background-color: #add8e6;
}
