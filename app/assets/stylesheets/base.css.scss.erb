
h1 > a {
  color: black;

  &:hover {
    color: black;
    text-decoration: none;
  }
}

.float-right {
  float: right;
}


[class^="icon-"] {
  background-image: url(<%= asset_data_uri 'twitter/bootstrap/glyphicons-halflings.png' %>)
}

.icon-white {
  background-image: url(<%= asset_data_uri 'twitter/bootstrap/glyphicons-halflings-white.png' %>)
}

.btn-tiny {
  padding: 2px 6px 2px;
  line-height: 15px;
}

table tbody.no-first-border {
  tr:first-child td {
    border-top: 0;
  }
}
